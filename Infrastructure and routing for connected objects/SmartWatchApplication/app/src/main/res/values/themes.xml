<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.SmartWatchApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorOutline">@color/white</item>
        <item name="colorSurfaceVariant">@color/surfaceColors</item>
        <item name="colorOnSurfaceVariant">@color/surfaceColors</item>
        <item name="colorOnSurface">@color/surfaceColors</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.SmartWatchApplication" parent="Base.Theme.SmartWatchApplication" />

    <style name="toolbarNormal" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/outfit_medium</item>
    </style>

    <style name="toolbarHome" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/outfit_medium</item>
    </style>

    <style name="toolbarMain" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/outfit_bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>


    <style name="shapeAbleImageRound">
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="shapeAbleGalleryImageRound">
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>

    <style name="shape8sdp">
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>


    <style name="bottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/colorTransparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>