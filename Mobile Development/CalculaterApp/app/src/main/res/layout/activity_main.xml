<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edINPrice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:hint="Enter Initial Price"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        tools:layout_editor_absoluteX="15dp" />

    <EditText
        android:id="@+id/edTex"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:hint="Enter Tex"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="numberDecimal"

        android:textSize="15sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edINPrice"
        tools:layout_editor_absoluteX="15dp" />
    <EditText
        android:id="@+id/edFullPrice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:hint="Enter Full Price"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/edTex"
        tools:layout_editor_absoluteX="15dp" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:paddingHorizontal="50dp"
        android:text="Enter"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/edFullPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>